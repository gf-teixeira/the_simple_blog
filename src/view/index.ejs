			<div class="post-list">
			<% posts.forEach((post) => { %>
				<div class="post-box" id="<%=post.id%>">
					<div class="post-buttons">
						<a style="text-decoration: none;" href="/post/edit/<%= post.id %> " class="img-box">
							<img src="/images/edit-24.svg" alt="edit-24">
						</a>
						<button class="img-box delete-button">
							<img src="/images/trash-24.svg" alt="trash-24">
						</button>
					</div>
					<div class="title-box">
						<a class="post-title" href="/post/<%=post.id%>"><%=post.title%></a>
					</div>
					<div class="content-box">
						<p class="p-content"><%=post.content%>
					</div>
					<p class="p-date"><%=post.created_at%></p>
				</div>
			<% }) %> 
			
			</div>
		</div>
		<div class="modal-wrapper">
			<div class="modal">
				<img src="/images/trash-48.svg" alt="" class="modal-img">
				<h3 class="modal-title">Remove Post</h3>
				<p>Do you really want to delete this post?
					<br>It will be erased forever.</p>
				
				<footer>
					<button id="btn-cancel" class="default-btn btn-cancel">CANCEL</button>
					<button form="delete-post" class="default-btn">REMOVE</button>
				</footer>
			</div>
