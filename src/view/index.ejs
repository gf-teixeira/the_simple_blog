<html>
	<head>
		<meta charset="utf-8">
		<title>My Blog</title>
		<link rel="stylesheet" href="/styles/index.css">
		<link rel="stylesheet" href="/styles/main.css">
	<meta name="viewport" content="width=device-width, height=device-height, initial-scale=1, maximum-scale=1, user-scalable=no" />
	<script src="/scripts/script.js" defer type="module"></script>
</head>

	<body>
		<%- include('parts/header') %> 
		<div class="page">
			<div class="row">	

				<div class="filter-box">
					<button class="dropdown-btn">Filter</button>
					<div class="dropdown-content">
						<a href="/">None</a>	
						<a href="?filter=Sports">Sports</a>	
						<a href="?filter=Technology">Technology</a>
						<a href="?filter=Science">Science</a>
						<a href="?filter=Movies">Movies</a>
					</div>
				</div>
		

				<div class="search-box">
					<input value="" type="text" id="input-search" name="input" class="search-input" placeholder="Search">
					<a style="cursor: pointer;" id="btn-search"><img class="search-img"src="/images/lupa.svg"/></a>
				</div>
			</div>

			
			<div class="post-list">
			<% posts.forEach((post) => { %>
				<div class="post-box" id="<%=post.id%>">
					<div class="post-buttons">
						<a style="text-decoration: none;" href="/post/edit/<%= post.id %> " class="img-box">
							<img src="/images/edit-24.svg" alt="edit-24">
						</a>
						<button class="img-box delete-button">
							<img src="/images/trash-24.svg" alt="trash-24">
						</button>
					</div>
					<div class="title-box">
						<a class="post-title" href="/post/<%=post.id%>"><%=post.title%></a>
					</div>
					<div class="content-box">
						<p class="p-content"><%=post.content%>
					</div>
					<p class="p-date"><%=post.created_at.toLocaleString().split(' ')[0]%></p>
				</div>
			<% }) %> 
			
			</div>
		</div>
		<div class="modal-wrapper">
			<div class="modal">
				<img src="/images/trash-48.svg" alt="" class="modal-img">
				<h3 class="modal-title">Remove Post</h3>
				<p>Do you really want to delete this post?
					<br>It will be erased forever.</p>
				
				<footer>
					<button id="btn-cancel" class="default-btn btn-cancel">CANCEL</button>
					<button type="submit" form="delete-post" class="default-btn">REMOVE</button>
				</footer>
			</div>
			<form method="POST" id="delete-post"></form>
		</div>
		
	</body>
</html>
